{
  "name": "monorepo-example",
  "private": true,
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:nextjs": "turbo run dev --filter=nextjs",
    "start:storybook": "turbo run start --filter=storybook",
    "storybook": "turbo run storybook --filter=storybook"
  },
  "devDependencies": {
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  }
}
